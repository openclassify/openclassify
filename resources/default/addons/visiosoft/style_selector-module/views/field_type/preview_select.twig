<div {{ html_attributes(field_type.attributes) }}>
    <div class="row">
        {% for value, option in field_type.options %}
            <label class="{#custom-control#} custom-radio col-3" style="padding: 10px 10px; display: block">
                    <div class="col-12">
                        <input
                                type="radio"
                                value="{{ value }}"
                                name="{{ field_type.input_name }}"
                                {{ value == field_type.key ? 'checked' }}
                                {{ field_type.disabled ? "disabled" }}>

                        <span class="{#custom-control-indicator#}"></span>
                        <strong>{{ trans(value)|upper }}</strong>
                    </div>
                    <div class="col-12 text-center" style="border: 1px solid #ddd">
                        <img src="{{ asset_path(option) }}" height="150px" class="thumbnail"
                             style="object-fit: contain">
                    </div>
            </label>
        {% endfor %}
    </div>
</div>
