    let profileRoute = `{{ url_route('profile::profile') }}`;
    let accountTrans = `{{ trans('visiosoft.theme.sahibinden::button.account') }}`;
    let logoutRoute = `{{ url_route('anomaly.module.users::logout') }}`;
    let logoutTrans = `{{ trans('visiosoft.theme.sahibinden::button.logout.name') }}`;
    let createAdvRoute = `{{ url_route('advs::create_adv') }}`;
    let postAdvTrans = `{{ trans("visiosoft.theme.sahibinden::button.post_ad.name") }}`;
</script>
