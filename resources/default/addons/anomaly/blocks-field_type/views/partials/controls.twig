<div class="block-item-controls">
    <ul class="list-inline">
        <li class="list-inline-item">
            <input type="checkbox">
        </li>
        <li class="list-inline-item">
            {% if form.options.block_subtitle %}
                {{ trans(form.options.block_title) }}:
                <span class="subtitle">{{ form.options.block_subtitle }}</span>
            {% else %}
                {{ trans(form.options.block_title) }}
            {% endif %}
        </li>
    </ul>

    <ul class="dropdown pull-right list-inline">

        <li class="list-inline-item">
            <a href="#" data-toggle="dropdown">
                {{ icon('cog') }}
            </a>
            <div class="dropdown-menu dropdown-menu-right">
                {% if form.options.block_id %}
                    <a href="#" class="dropdown-item" onclick="alert('#block--{{ form.options.block_id }}');return false;">
                        {{ icon('fa fa-hashtag') }} <span>{{ trans('anomaly.field_type.blocks::input.copy_id') }}</span>
                    </a>
                {% endif %}
                <a href="#" class="dropdown-item" data-toggle="collapse"
                   data-expand="{{ trans('anomaly.field_type.blocks::input.expand') }}"
                   data-collapse="{{ trans('anomaly.field_type.blocks::input.collapse') }}">
                    {{ icon('fa fa-compress') }} <span>{{ trans('anomaly.field_type.blocks::input.collapse') }}</span>
                </a>
                {% if not (field_type.readonly) %}
                    <a href="#" class="dropdown-item" data-add="above">
                        <i class="fa fa-plus"></i>
                        <span>{{ trans('anomaly.field_type.blocks::input.add_above') }}</span>
                    </a>
                    <div class="dropdown-divider"></div>
                    <a href="#" class="dropdown-item text-danger" data-delete="row">
                        <i class="fa fa-trash"></i> <span>{{ trans('anomaly.field_type.blocks::input.delete') }}</span>
                    </a>
                {% endif %}
            </div>
        </li>

        <li class="list-inline-item">
            <a href="#" class="block-handle" onclick="return false;">
                <i class="fa fa-arrows"></i>
            </a>
        </li>

    </ul>
</div>
