<div class="modal-header">
    <button class="close" data-dismiss="modal">
        <span>&times;</span>
    </button>
    <h4 class="modal-title">{{ trans('anomaly.field_type.blocks::message.choose_block') }}</h4>
</div>

<div class="modal-body">

    {% include "streams::modals/filter" %}

    {% if not blocks.isEmpty() %}
        <ul class="nav nav-pills nav-stacked">
            {% for block in blocks %}
                <li class="nav-item">
                    <a href="{{ url_to('/streams/blocks-field_type/form/' ~ route_parameter('field')) }}/{{ block.namespace }}?prefix={{ request_get('prefix') }}"
                       class="add-row nav-link has-click-event">
                        <strong>{{ trans(block.title) }}</strong>
                        <br>
                        <small>{{ trans(block.description) }}</small>
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        {{ trans('streams::message.no_results') }}
    {% endif %}
</div>
