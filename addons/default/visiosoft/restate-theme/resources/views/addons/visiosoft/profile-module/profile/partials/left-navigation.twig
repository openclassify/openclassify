<div class="col-lg-3 col-12 mb-5 mb-lg-0 d-block border bg-white p-3 rounded profileArea">
    <div class="d-flex align-items-center he-profile-image">
        {% if auth_user().file.first.make.url %}
            <div class="px-2 py-3">
                <img src="{{ auth_user().file.first.make.url }}" class="rounded-circle">
            </div>
        {% else %}
            <i class="fas fa-user-circle fs-70 color_6 px-2 py-3"></i>
        {% endif %}
        <span class="font-weight-bold color_8 ml-1">
            {{ auth_user().first_name }} {{ auth_user().last_name }}
        </span>
    </div>
    <div class="lineSeperate_2"></div>
    <a href="{{ url_route('profile::profile') }}"
       class="d-flex align-items-center mt_16">
        <svg class="svgWidth" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32">
            <g fill="none" fill-rule="evenodd">
                <circle cx="16" cy="16" r="15" stroke="#E1E1E1" stroke-width="2"></circle>
                <path fill="#BEBEBE" fill-rule="nonzero"
                      d="M16 16c1.934 0 3.5-1.566 3.5-3.5S17.934 9 16 9s-3.5 1.566-3.5 3.5S14.066 16 16 16zm0 1.75c-2.336 0-7 1.172-7 3.5V23h14v-1.75c0-2.328-4.664-3.5-7-3.5z">
                </path>
            </g>
        </svg>
        <span class="fs-14 color_9 fw-500 ml-2">{{ trans('visiosoft.theme.restate::field.profile') }}</span>
    </a>
    <a href="{{ url_route('profile::ads') }}" class="d-flex mt_16 flex-column">
        <div class="d-flex align-items-center specialHover">
            <svg class="svgWidth" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32">
                <g fill="none" fill-rule="evenodd">
                    <circle cx="16" cy="16" r="15" stroke="#E1E1E1" stroke-width="2"></circle>
                    <path fill="#BEBEBE"
                          d="M20 19c.552 0 1 .448 1 1s-.448 1-1 1h-5c-.552 0-1-.448-1-1s.448-1 1-1h5zm5-4c.552 0 1 .448 1 1s-.448 1-1 1H15c-.552 0-1-.448-1-1s.448-1 1-1h10zM9 11c1.657 0 3 1.343 3 3s-1.343 3-3 3-3-1.343-3-3 1.343-3 3-3zm0 2c-.552 0-1 .448-1 1s.448 1 1 1 1-.448 1-1-.448-1-1-1zm16-2c.552 0 1 .448 1 1s-.448 1-1 1H15c-.552 0-1-.448-1-1s.448-1 1-1h10z">
                    </path>
                </g>
            </svg>
            <span class="fs-14 color_9 fw-500 ml-2">{{ trans('visiosoft.theme.restate::field.my_ads') }}</span>
        </div>
    </a>
    <div class="{{ app.request.pathinfo == '/profile/ads' ? '' : 'd-none' }}">
        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
            <a href="#v-pills-active_ads" data-type="active_ads" class="nav-link d-flex flex-column py-0" id="v-pills-home-tab"
               data-toggle="pill" role="tab" aria-controls="v-pills-home" aria-selected="true">
                <div class="menuAdvs d-flex align-items-center fs-14">
                    <div class="menuAdvs_Line"></div>
                    <div class="color_9">{{ trans('visiosoft.theme.restate::field.active_ads') }}</div>
                </div>
            </a>
            <a href="#v-pills-pending_ads" data-type="pending_ads" class="nav-link d-flex flex-column py-0" id="v-pills-profile-tab"
               data-toggle="pill" role="tab" aria-controls="v-pills-profile" aria-selected="false">
                <div class="menuAdvs d-flex align-items-center fs-14">
                    <div class="menuAdvs_Line"></div>
                    <div class="color_9">{{ trans('visiosoft.theme.restate::field.pending_ads') }}</div>
                </div>
            </a>
            <a href="#v-pills-passive_ads" data-type="passive_ads" class="nav-link d-flex flex-column py-0" id="v-pills-messages-tab"
               data-toggle="pill" role="tab" aria-controls="v-pills-messages" aria-selected="false">
                <div class="menuAdvs d-flex align-items-center fs-14">
                    <div class="menuAdvs_Line"></div>
                    <div class="color_9">{{ trans('visiosoft.theme.restate::field.passive_ads') }}</div>
                </div>
            </a>
            <a href="#v-pills-incomplete_ads" data-type="incomplete_ads" class="nav-link d-flex flex-column py-0" id="v-pills-settings-tab"
               data-toggle="pill" role="tab" aria-controls="v-pills-settings" aria-selected="false">
                <div class="menuAdvs d-flex align-items-center fs-14">
                    <div class="menuAdvs_Line"></div>
                    <div class="color_9">{{ trans('visiosoft.theme.restate::field.incomplete_ads') }}</div>
                </div>
            </a>
        </div>
    </div>

    <a href="{{ url_route('favs::favorites') }}"
       class="d-flex align-items-center mt_16">
        <svg class="svgWidth" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32">
            <g fill="none" fill-rule="evenodd">
                <circle cx="16" cy="16" r="15" stroke="#E1E1E1" stroke-width="2"></circle>
                <path fill="#BEBEBE"
                      d="M15.608 23.66l-.768-.667C10.72 19.43 8 17.08 8 14.196 8 11.846 9.936 10 12.4 10c1.392 0 2.728.618 3.6 1.595.872-.977 2.208-1.595 3.6-1.595 2.464 0 4.4 1.846 4.4 4.196 0 2.884-2.72 5.234-6.84 8.805l-.767.66c-.226.195-.56.194-.785-.001z">
                </path>
            </g>
        </svg>
        <span class="fs-14 color_9 fw-500 ml-2">{{ trans('visiosoft.theme.restate::field.my_favorites') }}</span>
    </a>
    <a href="{{ url_route('visiosoft.module.favs::saved_searches') }}" class="d-flex align-items-center mt_16">
        <svg class="svgWidth" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32">
            <g fill="none" fill-rule="evenodd">
                <circle cx="16" cy="16" r="15" stroke="#E1E1E1" stroke-width="2"></circle>
                <path fill="#BEBEBE" fill-rule="nonzero"
                      d="M21 14c0-2.686-1.185-4.498-3.688-5.092v-.595C17.313 7.585 16.727 7 16 7c-.726 0-1.313.586-1.313 1.313v.595C12.178 9.503 11 11.305 11 14v4.5l-2 2.063V22h14v-1.438L21 18.5V14zm-5 11c1 0 2-1 2-2h-4c0 1 1.029 2 2 2z">
                </path>
            </g>
        </svg>
        <span class="fs-14 color_9 fw-500 ml-2">{{ trans('visiosoft.theme.restate::field.saved_searches') }}</span>
    </a>
{#    {{ addBlock('profile/navigation',{}, ['messages'])|raw }}#}
</div>
