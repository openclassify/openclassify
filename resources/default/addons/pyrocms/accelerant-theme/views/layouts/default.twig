<!doctype html>

<html>

<head>
    {% include "theme::partials/metadata" %}
</head>

<body class="variant-{{ random(8) }}{{ locale().isRtl() ? ' rtl' }} display--{{ preference_value('pyrocms.theme.accelerant::display', 'default') }} sidebars--{{ preference_value('pyrocms.theme.accelerant::sidebars', 'default') }}"
      data-variants="8">

