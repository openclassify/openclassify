<span class="product p-0 mx-2 position-relative bg-white text-decoration-none border">
    <div class="product-img ">
        <a href="{{ ads.detail_url }}">
            {{ img(ads.thumbnail).class('rounded')|raw }}
        </a>
    </div>
    <div class="product-text-area p-3">
        <div class="single-line">
            <a href="{{ ads.detail_url }}"
               class="product-title">{{ ads.name }}</a>
        </div>
        <div class="mt-2 product-location">
            <i class="fa fa-map-marker" aria-hidden="true"></i>
            {{ ads.country.name }}
            {{ entries('location', 'cities').find(ads.city) ? ', ' ~  entries('location', 'cities').find(ads.city).name : '' }}
        </div>
        <div class="mt-3 fw-600 p-0 m-0">
            <div class="product-card-border"></div>
            <div class="d-flex justify-content-between align-items-center mt-2">
                <div class="mt-2 product-date ">
                    <i class="fa fa-calendar"></i> {{ ads.created_at|date('d.m.Y') }}</div>
                <div class="product-price">{{ currency_format(ads.price,ads.currency, {'separator' : '.', 'point' : ','}) }}</div>
            </div>
        </div>
    </div>
    {% if not doping  %}

    {% else %}
        <a      href="{{ url_route('visiosoft.module.advs::list') }}?dopings={{ doping.slug }}"
                class="card-doping text-white {{ doping.slug == 'fire_sale' ? 'bg-color2' : 'bg-color'}} ">
            {{ doping.name }}
        </a>
    {% endif %}
{#    {{ addBlock('index-actions', {item_id: ads.id}, ['favs'])|raw }}#}
</span>


