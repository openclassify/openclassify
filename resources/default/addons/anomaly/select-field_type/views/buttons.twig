<div {{ html_attributes(field_type.attributes) }}>

    <div class="btn-group btn-group-toggle" data-toggle="buttons">
        {% for value, option in field_type.options %}
            {% if option is iterable %}

                <label>{{ value }}</label>

                {% for value, option in option %}
                    <label class="btn btn-{{ field_type.config.button_type ?: 'info' }} {{ value == field_type.key ? 'active' }}">

                        <input
                                type="radio"
                                value="{{ value }}"
                                name="{{ field_type.input_name }}"
                                {{ value == field_type.key ? 'checked' }}>

                        {{ trans(option)|raw }}

                    </label>
                {% endfor %}
            {% else %}
                <label class="btn btn-{{ field_type.config.button_type ?: 'info' }} {{ value == field_type.key ? 'active' }}">

                    <input
                            type="radio"
                            value="{{ value }}"
                            name="{{ field_type.input_name }}"
                            {{ value == field_type.key ? 'checked' }}>

                    {{ trans(option)|raw }}

                </label>
            {% endif %}
        {% endfor %}
    </div>

</div>
