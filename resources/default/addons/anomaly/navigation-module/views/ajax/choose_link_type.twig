<div class="modal-header">
    <button class="close" data-dismiss="modal">
        <span>&times;</span>
    </button>
    <h4 class="modal-title">{{ trans('module::message.choose_link_type') }}</h4>
</div>

<div class="modal-body">

    {% include "streams::modals/filter" %}

    {% if not link_types.isEmpty() %}
        <ul class="nav nav-pills nav-stacked">
            {% for link_type in link_types %}
                <li class="nav-item">
                    <a href="{{ url_to('admin/navigation/links/' ~ menu ~ '/create?link_type=' ~ link_type.namespace ~ '&parent=' ~ request_get('parent')) }}" class="nav-link">
                        <strong>{{ trans(link_type.object.title) }}</strong>
                        <br>
                        <small>{{ trans(link_type.object.description) }}</small>
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        {{ trans('streams::message.no_results') }}
    {% endif %}
</div>
