{{ asset_add("styles.css", "anomaly.field_type.checkboxes::css/choices.css", ["as:jshjohnson/Choices.css"]) }}
{{ asset_add("scripts.js", "anomaly.field_type.checkboxes::js/choices.js", ["as:jshjohnson/Choices.js"]) }}
{{ asset_add("scripts.js", "anomaly.field_type.checkboxes::js/tags.js") }}

<select multiple
        name="{{ field_type.input_name }}[]"
        data-placeholder="{{ trans(field_type.placeholder) }}"
        {{ html_attributes(field_type.attributes) }}
        {{ field_type.disabled ? 'disabled' }}
        {{ field_type.readonly ? 'readonly' }}>

    {% for key, title in field_type.options %}
        <option value="{{ key }}" {{ key in field_type.value ? 'selected' }}>
            {{ title }}
        </option>
    {% endfor %}

</select>

<small class="text-muted">
    {{ trans('anomaly.field_type.checkboxes::input.help') }}
</small>
