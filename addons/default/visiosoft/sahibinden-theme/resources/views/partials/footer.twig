                            <div class="sah-phone-square">
                                <i class="fas fa-phone-square"></i>
                            </div>
                        </div>
                        <div class="col-9 p-0 pl-2">
                            <span class="text-danger font-weight-bold">
                                {{ trans('visiosoft.theme.sahibinden::field.costumer_services.name') }}
                            </span>
                            <p class="font-weight-bold mb-0">
                                {{ setting_value('visiosoft.theme.sahibinden::help_phone', '0850 000 00 00') }}
                                <br>
                                {{ setting_value('visiosoft.theme.sahibinden::work_hours', '09:00-18:00') }}
                            </p>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 row align-items-center">
                        <div class="col-3 p-0 text-center text-danger">
                            <div class="sah-question-circle">
                                <i class="fas fa-question-circle"></i>
                            </div>
                        </div>
                        <div class="col-9 p-0 pl-2">
                            <span class="text-danger font-weight-bold">
                                {{ trans('visiosoft.theme.sahibinden::field.help_center.name') }}
                            </span>
                            <p class="font-weight-bold">
                                {{ setting_value('visiosoft.theme.sahibinden::contact_email', setting_value('streams::email', 'openclassify.com')) }}
                            </p>
                        </div>
                    </div>
                </div>
                {% set playstore_link = setting_value('visiosoft.theme.sahibinden::playstore') %}
                <div class="col-md-6 row justify-content-end mx-0 px-0 d-none d-md-flex">
                    {% if setting_value('visiosoft.theme.sahibinden::desktop_payment_band') %}
                        {{ img(file(setting_value('visiosoft.theme.sahibinden::desktop_payment_band')).url) }}
                    {% else %}
                        {{ img('visiosoft.theme.sahibinden::images/desktop_pay.svg') }}
                    {% endif %}
                    <div class="col-md-5 row store_icon m-0 p-0 justify-content-end align-items-center">
                        <a href="{{ setting_value('visiosoft.theme.sahibinden::appstore') }}">
                            <div class="m-0 p-0 appstore"></div>
                        </a>
                        {% if playstore_link  and playstore_link != '#' %}
                            <a href="{{ playstore_link }}">
                                <div class="m-0 p-0 ml-2 playstore"></div>
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col-md-12 row">
                <div class="col-md-6 copyright px-0">
                    <p>
                        {{ trans('visiosoft.theme.sahibinden::field.copyright.name') }}
                        © {{ 'now'|date('Y') }} {{ setting_value('streams::domain', 'openclassify.com') }}
                    </p>
                </div>
                <div class="col-md-6 lang px-0 text-right">
