{% set storeDetail = entries('store','store').where('user_id', params.userId).first() %}
{% if storeDetail is not null %}
    <div class="user-pp d-flex ">
        <div class="border rounded w-special-2 p-0">
            {{ img(storeDetail.file.make.url ?? 'visiosoft.theme.restate::images/no-image-user.6f6a83e.svg').class('h-100')|raw }}
        </div>
        <div class="ml-4 fs-14">
            <div class="font-weight-bold">{{ storeDetail.name }}
                {% if storeDetail.verified %}
                    {{ img('visiosoft.module.store::images/verified.svg').data|raw }}
                {% endif %}
            </div>

            <div class="color-4 mt-1">
                <a href="{{ url_route('store::view', [storeDetail.slug]) }}" class="text-black-50">
                    {{ trans('visiosoft.module.store::field.other_ads.name') }}
                </a>
            </div>
        </div>
    </div>

    <div class="bg-yellow text-dark fw-500 d-flex align-items-center justify-content-center p-2 rounded-two mt-4 btn-hover">
        <i class="fa fa-phone fa-flip-horizontal mr-3"></i>
        {{ trans('visiosoft.theme.restate::field.show_phone') }}
        <div class="bg-white shadow w-special-5 detail rounded-three border">
            <div class="d-flex py-2 px-3 ">
                <i class="fas fa-user-circle fs-40 text-secondary mr-3"></i>
                <div class="fs-14">
                    <span class="text-secondary">{{ storeDetail.user.name }}</span>
                    <br>
                    <span>{{ trans('visiosoft.theme.restate::field.ads_no') }}: {{ params.adv.id }}</span>
                </div>
            </div>
            <div class="mt-3 border px-4 py-2 color-3 text-center d-flex flex-column">
                <span>
                    <i class="fas fa-mobile-alt mr-3"></i>
                    {{ storeDetail.gsm_phone.value ?? storeDetail.land_phone.value ?? params.adv.created_by.gsm_phone  }}
                </span>
            </div>
        </div>
    </div>
{% endif %}
