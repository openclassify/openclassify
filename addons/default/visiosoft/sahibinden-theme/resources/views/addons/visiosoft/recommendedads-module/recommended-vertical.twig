<div class="latest-ads-home">
    <div class="row pl-2 pt-2 pr-2 pb-0 header-home-centent">
        <div class="col">
            <h3 class="p-0 latest-title">{{ trans('visiosoft.module.recommendedads::field.recommended.name') }}</h3>
        </div>
    </div>

    <div class="container">
        <div class="row list-classified-home">
            {% for recommended in recommendedads|slice(0, setting_value('visiosoft.module.recommendedads::limit')) %}
                <div class="col-md-12 mb-2 list-classified">
                    <a href="{{ recommended.detail_url }}" class="text-dark">
                        <div class="row bg-light">
                            <div class="col-md-2 text-center border-right border-white">
                                <img class="img-thumbnail" src="{{ recommended.thumbnail }}" alt="{{ recommended.name }}">
                            </div>
                            <div class="col-md-7 justify-content-center text-center text-md-left align-self-center border-right border-white">
                                <div class="row">
                                    <div class="col-md-12">
                                        <p>{{ recommended.name }}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 text-left justify-content-center align-self-center text-center">
                                <div class="row">
                                    <div class="col-md-12">
                                        <b>{{ recommended.price.currency }}</b>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</div>