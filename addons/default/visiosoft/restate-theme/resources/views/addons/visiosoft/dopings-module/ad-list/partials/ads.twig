<div class="d-flex flex-column">
    <div class="row">
        {% for ads in params.featured_advs %}
            <div class="col-xl-4 col-sm-6 col-12 px-sm-2 pt-3">
                <span class="product p-0 mx-2 position-relative list-featured-product text-decoration-none">
                    <div class="product-img ">
                        <a href="{{ ads.detail_url }}">
                            {{ img(ads.thumbnail).class('rounded')|raw }}
                        </a>
                    </div>
                    <div class="product-text-area p-3">
                        <div class="single-line">
                            <a href="{{ ads.detail_url }}"
                               class="product-title">{{ ads.name }}</a>
                        </div>
                        <div class="mt-2 product-location">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                            {{ ads.country.name }}
                            {{ entries('location', 'cities').find(ads.city) ? ', ' ~  entries('location', 'cities').find(ads.city).name : '' }}
                        </div>
                        <div class="mt-3 fw-600 p-0 m-0">
                            <div class="product-card-border"></div>
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <div class="mt-2 product-date ">
                                    <i class="fa fa-calendar"></i> {{ ads.created_at|date('d.m.Y') }}</div>
                                <div class="product-price">{{ currency_format(ads.price,ads.currency, {'separator' : '.', 'point' : ','}) }}</div>
                            </div>
                        </div>
                    </div>
            </div>
        {% endfor %}
    </div>
</div>


<script>
    var showcase = `
        <div class="listing-top-message w-100 mb-2 text-center py-2">
            <a href="{{ url_route('profile::ads') }}">
                {{ trans(setting_value('visiosoft.module.dopings::listing-ad-text')) }}
            </a>
        </div>
    `;
    var type_class = '.doping-type-2', showcase_class = '.products-list';
</script>

{{ asset_script('visiosoft.module.dopings::js/showcase-ad.js') }}
