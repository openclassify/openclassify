{% macro item(field_type, value) %}
    <li>
        <div class="input-group">

            <span class="input-group-btn">
                <span class="btn handle">{{ icon('bars') }}</span>
            </span>

            {% if field_type.config.type == 'textarea' %}
                <textarea
                        class="form-control"
                        name="{{ field_type.getInputName() }}[{{ key }}]"
                        placeholder="{{ trans(field_type.placeholder) }}"
                        data-name="{{ field_type.getInputName() }}">{{ value }}</textarea>
            {% else %}
                <input
                        value="{{ value }}"
                        class="form-control"
                        name="{{ field_type.getInputName() }}[{{ key }}]"
                        type="{{ field_type.config.type ?: 'text' }}"
                        placeholder="{{ trans(field_type.placeholder) }}"
                        data-name="{{ field_type.getInputName() }}">
            {% endif %}

            <span class="input-group-btn">
                <button class="btn btn-success add" type="button">
                    <small>{{ icon('plus') }}</small>
                </button>
            </span>

            <span class="input-group-btn">
                <button class="btn btn-danger remove" type="button">
                    <small>{{ icon('minus') }}</small>
                </button>
            </span>

        </div>
    </li>
{% endmacro %}
